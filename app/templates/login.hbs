{{#unless isServerClientVersionMismatch}}
<div class="well login span4">
  <div align="center">
    <img src="/img/keedio/logo-green-title.png" width="140px" height="180px" alt="Keedio Ambari" title="Keedio Ambari">
  </div>
  <h2>{{t login.header}}</h2>
  {{#if errorMessage}}
  <div class="alert alert-error">
    {{errorMessage}}
  </div>
  {{/if}}
  <span class="pantone5285C"><label>{{t login.username}}</label></span>
  {{view view.loginTextField valueBinding="loginName" class="span4"}}
  <span class="pantone5285C"><label>{{t common.password}}</label></span>
  {{view view.passTextField type="password" valueBinding="password" class="span4"}}
  <div align="right">
    <button class="btn btn-success" {{action "submit" target="controller"}}>{{t login.loginButton}}</button>
  </div>
</div>
{{/unless}}